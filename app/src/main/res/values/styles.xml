<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_button_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/clickable_effect</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/dark_ink</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="menu_button_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="game_cards_card_backs">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:foreground">@drawable/clickable_effect</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/dark_ink</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="game_cards_icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="srcCompat">@drawable/landscape_icon</item>
    </style>

</resources>